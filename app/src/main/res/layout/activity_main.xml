<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:fontFamily="@font/robotobold"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:text="Статьи"
        android:textColor="#FFF"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/blockColor"
        app:cardElevation="0dp"

        android:layout_height="200dp">
        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                app:cardBackgroundColor="@color/blockColor"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"

                    android:src="@drawable/pic1"

                    >

                </ImageView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blockColor"
                android:layout_height="match_parent">

                    <TextView
                        android:fontFamily="@font/mu1"
                        android:layout_width="match_parent"
                        android:textColor="#FFF"
                        android:textSize="28sp"
                        android:text="Ряды"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="60dp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/btn1Color"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"

                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="30dp"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:fontFamily="@font/mu2"

                            android:text="Читать"
                            android:textSize="20sp"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:layout_height="match_parent"></TextView>

                    </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:fontFamily="@font/robotobold"

        android:layout_width="match_parent"
        android:textSize="30sp"
        android:text="Тренировки"
        android:textColor="#FFF"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/blockColor"
        app:cardElevation="0dp"

        android:layout_marginBottom="40dp"
        android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"

                android:src="@drawable/pic2"

                >

            </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardElevation="0dp"
            android:layout_gravity="bottom|end"
            app:cardBackgroundColor="#00FFFFFF"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/mu1"

                android:layout_width="match_parent"
                android:textColor="#FFF"
                android:textSize="28sp"
                android:text="Сложение"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="60dp"
                android:layout_height="wrap_content">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStart"
                app:cardBackgroundColor="@color/btn2Color"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"

                android:layout_marginEnd="16dp"
                android:layout_marginStart="30dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Начать"
                    android:fontFamily="@font/mu2"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:layout_height="match_parent"></TextView>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>